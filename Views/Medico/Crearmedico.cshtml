@{
    ViewData["Title"] = "Crear medico";
}
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Crear medico</title>
        <link rel="stylesheet" href="~/css/CrearMedico.css" />
    </head>
    <body>
        <div class="box-general">
            <h1 class='tittle-text'>Crear medico</h1>
                <div class='box-crear-formulario'>
                    <h3 class="Subtittle">Información General</h3>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input">Nombres</label>
                                <input type="text" class="input-form" />
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Fecha de Nacimiento</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input">Apellidos</label>
                                <input type="text" class="input-form" />
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Género</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input">Email</label>
                                <input type="text" class="input-form" />
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Teléfono</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                    <h3 class="Subtittle">Ubicación</h3>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input">Pais</label>
                                <input type="text" class="input-form" />
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Provincia</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input">Distrito</label>
                                <input type="text" class="input-form" />
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Código Postal</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                    <h3 class="Subtittle">Área</h3>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input">Campo 1</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input">Especialidad</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                    <button class="btn-formulario">Registrar Médico</button>
                </div>
        </div>
    </body>
</html>