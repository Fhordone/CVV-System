@model Paciente
<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalle del paciente</title>
    <link rel="stylesheet" href="~/css/Detallepaciente.css" />
</head>

<body>
    <div class="box-general">
        <h1 class='tittle-text'>Detalle del Paciente</h1>
        <div class='box-content'>
            <div class='box-user'>
                <div class='box-user-content'>
                    <img src="https://c0.klipartz.com/pngpicture/81/570/gratis-png-perfil-logo-iconos-de-computadora-usuario-usuario.png"
                        class="photo-perfil" alt="Foto de perfil" />
                    <h4>@Model.Nombres @Model.Apellidos</h4>
                    <div class='user-information'>
                        <p>DNI: @Model.Nro_DNI</p>
                        <p>Tipo: Paciente</p>
                        <p>Estado: Activo</p>
                        <p>Fecha de Registro: 27/05/2023</p>
                    </div>
                </div>
            </div>
            <div class='box-formulario'>
                <h3 class="Subtittle">Información General</h3>
                <div class="form-group">
                    <div class="form-column">
                        <label class="Texto-input">Nombres</label>
                        <input type="text" class="input-form" name="Nombres" disabled asp-for="Nombres" />
                    </div>
                    <div class="form-column">
                        <label class="Texto-input">Fecha de Nacimiento</label>
                        <input type="text" class="input-form" name="Fecha de Nacimiento" disabled
                            asp-for="Fecha_Nacimiento" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-column">
                        <label class="Texto-input">Apellidos</label>
                        <input type="text" class="input-form" name="Apellidos" disabled asp-for="Apellidos" />
                    </div>
                    <div class="form-column">
                        <label class="Texto-input">Género</label>
                        <input type="text" class="input-form" name="genero" disabled asp-for="Genero" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-column">
                        <label class="Texto-input">Dirección</label>
                        <input type="text" class="input-form" name="Direccion" disabled asp-for="Genero" />
                    </div>
                    <div class="form-column">
                        <label class="Texto-input">Teléfono</label>
                        <input type="text" class="input-form" name="Telefono" disabled asp-for="Telefono" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-column">
                        <label class="Texto-input">Tipo de documento</label>
                        <input type="text" class="input-form" name="tipdoc" disabled asp-for="Tipo_Documento" />
                    </div>
                    <div class="form-column">
                        <label class="Texto-input">Correo electrónico</label>
                        <input type="text" class="input-form" name="Correo" disabled asp-for="Email" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-column">
                        <label class="Texto-input">Nro. de documento</label>
                        <input type="text" class="input-form" name="nrodoc" disabled asp-for="Nro_DNI" />
                    </div>
                    <div class="form-column">
                        <label class="Texto-input">Contraseña</label>
                        <input type="text" class="input-form" name="password" disabled asp-for="Password" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>