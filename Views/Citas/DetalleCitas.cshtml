@{
    ViewData["Title"] = "Editar citas";
}
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Editar citas</title>
        <link rel="stylesheet" href="~/css/EditarCitas.css" />
    </head>
    <body>
        <div class="box-general">
            <h1 class='tittle-text'>Editar citas</h1>
                <div class='box-crear-formulario'>
                    <h3 class="Subtittle">Datos del Cliente</h3>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input">Tipo de documento</label>
                                <input type="text" class="input-form" />
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Fecha de nacimiento</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input">Nro. de documento</label>
                                <input type="text" class="input-form" />
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Email</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input">Nombres completos</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>                    
                    <h3 class="Subtittle">Detalles de la Cita</h3>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input">Fecha</label>
                                <input type="text" class="input-form" />
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Hora</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                        <div class="form-group">   
                            <div class="form-column">
                                <label class="Texto-input">Estado</label>
                                <input type="text" class="input-form" />
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Venta</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                        <div class="form-group">   
                            <div class="form-column">
                                <label class="Texto-input">Prueba</label>
                                <input type="text" class="input-form" />
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">IGV</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-column">
                                <table class="tabla" id="miTabla">
                                    <thead>
                                    <tr>
                                        <th>Nombre de la Prueba</th>
                                        <th>Costo</th>
                                        <!-- Agrega más columnas según sea necesario -->
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <!-- Las filas se agregarán dinámicamente aquí -->
                                    </tbody>
                                </table>
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Total</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                        <div class="form-group">   
                            <div class="form-column"> </div>
                            <div class="form-column">
                                <label class="Texto-input">Urgencia</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                        <div class="form-group">   
                            <div class="form-column"> </div>
                            <div class="form-column">
                                <label class="Texto-input">Observación</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                </div>
        </div>
    </body>
</html>