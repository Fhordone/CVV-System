@model CCVLab.Models.Cita
@{
    ViewData["Title"] = "Editar citas";
}
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Editar citas</title>
        <link rel="stylesheet" href="~/css/CrearCitas.css" />
    </head>
    <body>
        <h1 class='tittle-text'>Detalle de la Cita</h1>
    <div class='box-crear-formulario'>
        <h3 class="Subtittle">Datos del Cliente</h3>
        <div class='box-data-user'>
            <div class='box-data-user-column1'>
                <div class="file">
                    <label class="Texto-input">Tipo de documento</label>
                    <input id="dni" name="dni" type="text" class="input-form" disabled asp-for="FK_Tipo_Doc"/>
                </div>
                <div class="file">
                    <label class="Texto-input">Nro. de documento</label>
                    <input id="dni" name="dni" type="number" class="input-form" disabled asp-for="DNI_Paciente"/>
                </div>
                <div class="file">
                    <label class="Texto-input">Nombres</label>
                    <input readonly="" id="nombre" type="text" class="input-form" disabled asp-for="NombresPaciente"/>
                </div>
                <div class="file">
                    <label class="Texto-input">Apellidos</label>
                    <input readonly="" id="apellido" type="text" class="input-form" disabled asp-for="ApellidosPaciente"/>
                </div>
            </div>
            <div class='box-data-user-column2'>
                <div class="file">
                    <label class="Texto-input">Fecha de nacimiento</label>
                    <input type="date" class="input-form" id="fecha" name="fecha" disabled asp-for="Fecha_Nacimiento"/>
                </div>
                <div class="file">
                    <label class="Texto-input">Email</label>
                    <input type="text" class="input-form" disabled asp-for="Email"/>
                </div>
                <div class="file">
                    <label class="Texto-input">Dirección</label>
                    <input type="text" class="input-form" disabled asp-for="Direccion"/>
                </div>
            </div>
        </div>
        <h3 class="Subtittle">Detalles de la cita</h3>
        <div class='box-data-cita'>
            <div class='box-data-cita-column1'>
                <div class="file">
                    <label class="Texto-input">Fecha</label>
                    <input type="date" class="input-form" id="fecha" name="fecha" disabled asp-for="Fecha"/>
                </div>
                <div class="file">
                    <label class="Texto-input">Estado</label>
                    <input type="text" class="input-form" id="fecha" name="fecha" disabled asp-for="FK_Estado"/>
                </div>
                <div class="file">
                    <label class="Texto-input">Prueba</label>
                    <select class="input-form" id="prueba" name="prueba" disabled >
                        <option value="hc">Hemograma completo</option>
                        <option value="pl">Perfil Lipídico</option>
                        <option value="g">Glucosa</option>
                        <option value="pe">Prueba de embarazo</option>
                    </select>
                </div>
            </div>
            <div class='box-data-cita-column2'>
                <div class="file">
                    <label class="Texto-input">Hora</label>
                    <input type="time" class="input-form" id="hora" name="hora" disabled asp-for="Hora"/>
                </div>
                <div class="file">
                    <label class="Texto-input">Sucursal</label>
                    <input type="text" class="input-form" id="fecha" name="fecha" disabled asp-for="FK_Sucursal"/>
                </div>
                <div class="file">
                    <label class="Texto-input">Total</label>
                    <input type="text" class="input-form" disabled/>
                </div>
            </div>
        </div>
    </div>
    </body>
</html>