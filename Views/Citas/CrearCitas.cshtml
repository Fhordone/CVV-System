@{
    ViewData["Title"] = "Crear citas";
}
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Crear citas</title>
        <link rel="stylesheet" href="~/css/CrearCitas.css" />
    </head>
    <body>
        <div class="box-general">
            <h1 class='tittle-text'>Crear Citas</h1>
                <div class='box-crear-formulario'>
                    <h3 class="Subtittle">Datos del Cliente</h3>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input">Tipo de documento</label>
                                <input type="text" class="input-form" />
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Fecha de nacimiento</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input">Nro. de documento</label>
                                <input type="text" class="input-form" />
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Email</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input">Nombres completos</label>
                                <input type="text" class="input-form" />
                            </div>
                        <div class="form-column">
                                <label class="Texto-input">Dirección</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>                    
                    <h3 class="Subtittle">Detalles de la Cita</h3>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input">Fecha</label>
                                <input type="date" class="input-form" id="fecha" name="fecha"/>
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Hora</label>
                                <input type="time" class="input-form" id="hora" name="hora"/>
                            </div>
                        </div>
                        <div class="form-group">   
                            <div class="form-column">
                                <label class="Texto-input">Estado</label>
                                <select class="input-form" id="estado" name="estado">
                                    <option value="e">En espera</option>
                                    <option value="p">En proceso</option>
                                    <option value="r">En revisión</option>
                                    <option value="f">Finalizado</option>
                                    <option value="c">Cancelado</option>
                                    <option value="s">Suspendido</option>
                                </select>
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Sucursal</label>
                                <select class="input-form" id="sucursal" name="sucursal">
                                    <option value="lima">Lima</option>
                                    <option value="arequipa">Arequipa</option>
                                    <option value="ica">Ica</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">   
                            <div class="form-column">
                                <label class="Texto-input">Prueba</label>
                                <select class="input-form" id="prueba" name="prueba">
                                    <option value="hc">Hemograma completo</option>
                                    <option value="pl">Perfil Lipídico</option>
                                    <option value="g">Glucosa</option>
                                    <option value="pe">Prueba de embarazo</option>
                                </select>
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Total</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-column">
                                <table class="tabla" id="miTabla">
                                    <thead>
                                    <tr>
                                        <th>Nombre de la Prueba</th>
                                        <th>Costo</th>
                                        <!-- Agrega más columnas según sea necesario -->
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <!-- Las filas se agregarán dinámicamente aquí -->
                                    </tbody>
                                </table>
                            </div>
                            <div class="form-column">
                                <label class="Texto-input">Urgencia</label>
                                <input type="checkbox" class="check" id="urgencia" name="urgencia"/>
                            </div>   
                        </div>
                        <div class="form-group">
                            <div class="form-column">
                                <label class="Texto-input"> </label>
                            </div> 
                            <div class="form-column">
                                <label class="Texto-input">Observación</label>
                                <input type="text" class="input-form" />
                            </div>
                        </div>
                        <div class="form-group">   
                            <div class="form-column">
                                <button class="btn-prueba" onclick="agregarFila()">Agregar prueba</button>
                            </div>
                        </div>
                    <button class="btn-formulario">Registrar Cita</button>
                </div>
        </div>
    </body>
</html>